                        {
                            <a href="#" class="btn btn--block btn--box btn--blue btn--large btn--uppercase btn--weight">تکمیل خرید و ثبت سفارش</a>
                        }
                    </div>
                </div> <!-- End Add Cart Checkout Box-->
            </div>
        </div>
        <!--end of mobile section-->
        <div class="offcanvas-overlay"></div>
        @RenderSection("styles", false)
    </header>

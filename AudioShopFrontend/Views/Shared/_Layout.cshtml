    <script type="text/javascript">
        $(function () {
            $("#btnSearch").click(function (e)
            {
                e.preventDefault();
            });
            $("#btnNewsletter").click(function (e)
            {
                e.preventDefault();
                if ($("#YourEmail").val() != '')
                {
                $.ajax(
                    {
                        url: '@Url.Action("AddToNewsletter","Home")',
                        type: 'post',
                        datatype: 'json',
                        data: { Mail: $("#YourEmail").val() },
                        success: function (result) {
                            if (result.HasValue) {
                                $("#NewsletterMessage").text('ایمیل شما با موفقیت به خبر نامه اضافه گردید.از اعتماد شما متشکریم.');
                                $('#frmNewsletter').each(function () { this.reset(); });
                            } else {
                                $("#NewsletterMessage").text('خطا در انجام عملیات.لطفا مجدد امتحان نمایید');
                            }
                        },
                        error: function ()
                        {
                            $("#NewsletterMessage").text('خطا در انجام عملیات.لطفا مجدد امتحان نمایید');
                        }
                    });
                    $("#modalNewsletterAlert").modal('show');
                }
            });
            $("#SearchBox").on('input', function () {
                $("#SearchBox1").val($("#SearchBox").val());
                if ($("#SearchBox").val().trim().length > 2)
                {
                    $.ajax({
                            url: '@Url.Action("SearchThis","Home")',
                            type: 'post',
                            datatype: 'json',
                            data: { Text: $("#SearchBox").val(), Nidcategory: $('#SearchCategory').find(":selected").val() },
                            success: function (result) {
                                if (result.HasValue) {
                                    $("#SearchContent").removeAttr('hidden');
                                    $("#SearchContent1").removeAttr('hidden');
                                    $("#SearchContent").html(result.Html);
                                    $("#SearchContent1").html(result.Html);
                                } else {
                                    $("#SearchContent").attr('hidden', 'hidden');
                                    $("#SearchContent1").attr('hidden', 'hidden');
                                }
                            },
                            error: function () { }
                        });
                } else {
                    if($("#SearchContent").is(":hidden") == false)
                    {
                        $("#SearchContent").attr('hidden', 'hidden');
                        $("#SearchContent1").attr('hidden', 'hidden');
                    }

                }
            });
            $("#SearchBox1").on('input', function () {
                $("#SearchBox").val($("#SearchBox1").val());
                if ($("#SearchBox1").val().trim().length > 2) {
                    $.ajax({
                        url: '@Url.Action("SearchThis","Home")',
                        type: 'post',
                        datatype: 'json',
                        data: { Text: $("#SearchBox1").val(), Nidcategory: $('#SearchCategory1').find(":selected").val() },
                        success: function (result) {
                            if (result.HasValue) {
                                $("#SearchContent1").removeAttr('hidden');
                                $("#SearchContent1").html(result.Html);
                                $("#SearchContent").removeAttr('hidden');
                                $("#SearchContent").html(result.Html);
                            } else {
                                $("#SearchContent1").attr('hidden', 'hidden');
                                $("#SearchContent").attr('hidden', 'hidden');
                            }
                        },
                        error: function () { }
                    });
                } else {
                    if ($("#SearchContent1").is(":hidden") == false) {
                        $("#SearchContent1").attr('hidden', 'hidden');
                        $("#SearchContent").attr('hidden', 'hidden');
                    }

                }
            });
        });
        function AddToCart(productName,Price,ImageUrl,NidProd,quantity)
        {
            $.ajax(
                {
                    url: '@Url.Action("AddProductToCart","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: { NidProduct: NidProd, Quantity: quantity, price: Price },
                    success: function (result) {
                        if (result.HasValue) {
                            $("#CartCount").html(result.tmpNidCategory);
                            $("#CartPopupCount").text('تعداد محصولات : ' + result.tmpNidCategory);
                            $("#cartpopup").html(result.Html);
                            $("#modal_img").attr("src", ImageUrl)
                            $("#modal_name").text(productName)
                            $("#modal_price").text(result.Message)
                            $("#modal_prodcount").text(result.tmpNidCategory)
                            $("#modalAddCart").modal('show')
                        } else {
                            $("#modalAddCartAlert").modal('show')
                        }
                    },
                    error: function () { }
                });
        }
        function AddToFav(NidProd)
        {
            $.ajax(
                {
                    url: '@Url.Action("AddProductToFavorites","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: { NidProduct: NidProd },
                    success: function (result) {
                        if (result.HasValue) {
                            $("#FavCount").html(result.Html);
                        }
                    },
                    error: function () { }
                });
        }
        function ClearProductFromCart(nidproduct)
        {
            $.ajax(
                {
                    url: '@Url.Action("RemoveProductFromCart","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: { NidProduct: nidproduct },
                    success: function (result) {
                        if (result.HasValue) {
                            $("#cartpopup").html(result.Html);
                            $("#CartCount").html(result.tmpNidCategory);
                            $("#CartPopupCount").text('تعداد محصولات : ' + result.tmpNidCategory);
                            var cartItem = document.getElementById(nidproduct)
                            cartItem.remove();
                            $("#cartAggregate").text(result.Message)
                            $("#cartSumAggregate").text(result.Message)
                        }
                    },
                    error: function () { }
                });
        }
        function myNotify(from, align, icon, type, animIn, animOut, myMessage) {
            $.growl({
                icon: icon,
                title: '',
                message: myMessage,
                url: ''
            }, {
                element: 'body',
                type: type,
                allow_dismiss: true,
                placement: {
                    from: from,
                    align: align
                },
                offset: {
                    x: 20,
                    y: 85
                },
                spacing: 10,
                z_index: 1031,
                delay: 2500,
                timer: 1000,
                url_target: '_blank',
                mouse_over: false,
                animate: {
                    enter: animIn,
                    exit: animOut
                },
                icon_type: 'class',
                template: '<div data-growl="container" class="alert" role="alert">' +
								'<button type="button" class="close" data-growl="dismiss">' +
									'<span aria-hidden="true">&times;</span>' +
									'<span class="sr-only">Close</span>' +
								'</button>' +
								'<span data-growl="icon"></span>' +
								'<span data-growl="title"></span>' +
								'<span data-growl="message"></span>' +
								'<a href="#" data-growl="url"></a>' +
							'</div>'
            });
        };
    </script>

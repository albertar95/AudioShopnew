@model AudioShopFrontend.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="page-breadcrumb__menu ForceRTL">
                    <li class="page-breadcrumb__nav"><a href="@Url.Action("Index")">خانه </a></li>
                    <li class="page-breadcrumb__nav active">ثبت نام </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- login area start -->
            <div class="login-register-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                            <div class="login-register-wrapper">
                                <div class="login-register-tab-list nav">
                                    <a data-toggle="tab" href="#lg1">
                                        <h4>ورود</h4>
                                    </a>
                                    <a class="active" data-toggle="tab" href="#lg2">
                                        <h4>ثبت نام</h4>
                                    </a>
                                </div>
                                <div class="tab-content" style="text-align:right;">
                                    <div id="lg1" class="tab-pane">
                                        <div class="login-form-container">
                                            <div class="login-register-form">
                                                @using (Html.BeginForm("SubmitLogin", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "LoginForm" }))
                                                {
                                                <form action="#" method="post">
                                                    <div class="form-box__single-group">
                                                        <input type="text" id="LoginUsername" name="Login.Username" placeholder="نام کاربری">
                                                    </div>
                                                    <div class="form-box__single-group">
                                                        <input type="password" id="LoginPassword" name="Login.Password" placeholder="رمز عبور">
                                                    </div>
                                                    <div class="d-flex justify-content-between flex-wrap m-tb-20">
                                                        <label for="account-remember">
                                                            <input type="checkbox" id="UserRemember">
                                                            <span>مرا به خاطر بسپار</span>
                                                        </label>
                                                        <a class="link--gray" href="">بازیابی رمز عبور</a>
                                                    </div>
                                                    <button class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" id="btnLogin" type="submit">ورود</button>
                                                </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div id="lg2" class="tab-pane active">
                                        <div class="login-form-container">
                                            <div class="login-register-form">
                                               @using (Html.BeginForm("SubmitRegister", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "RegisterForm" }))
                                               {
                                                   if (TempData["RegisterError"] != null)
                                                   {
                                                    <div class="alert alert-warning" role="alert" id="warningMessageDiv">
                                                        @TempData["RegisterError"]
                                                    </div>
                                                   }
                                                <form action="#" method="post" style="text-align:right;">
                                                    <div class="form-box__single-group">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;">*</span>   <input type="text" id="User_FirstName" name="User.FirstName" placeholder="نام" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-box__single-group">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;">*</span> <input type="text" id="User_Lastname" name="User.LastName" placeholder="نام خانوادگی" required>
                                                        </div>
                                                        </div>
                                                    <div class="form-box__single-group">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;">*</span> <input type="email" id="User.Username" oninvalid="this.setCustomValidity('ایمیل را صحیح وارد کنید')" name="User.Username" placeholder="ایمیل" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;">*</span> <input type="password" id="User_Password" name="User.Password" placeholder="رمز عبور" required>
                                                        </div>
                                                        </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;"> </span> <input type="password" id="User_Password2" name="User.Password2" placeholder="تکرار رمز عبور" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;"> </span>  <input type="number" id="User_ZipCode" name="User.ZipCode" placeholder="کد پستی" maxlength="10">
                                                        </div>
                                                    </div>
                                                    <div class="form-box__single-group m-b-20">
                                                        <div style="display:flex;">
                                                            <span style="font-size:large;color:red;"> </span>  <textarea id="User_Address" name="User.Address" placeholder="آدرس" rows="4"></textarea>
                                                        </div>
                                                    </div>
                                                    <button class="btn btn--box btn--small btn--blue btn--uppercase btn--weight" id="btnRegister" type="submit">ثبت نام</button>
                                                </form>
                                               }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- login area end -->
        </div>
    </div>
</div>

@section styles
    {

    <link href="@Url.Content("~/Content/assets/css/notification/notification.css")" rel="stylesheet" />
}
@section scripts
    {
<script src="@Url.Content("~/Content/assets/js/notification/bootstrap-growl.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/notification/notification-active.js")"></script>
    <script type="text/javascript">
        $(function ()
        {
            setTimeout(function () {
                $("#warningMessageDiv").prop('hidden', 'hidden');
            }, 10000);
            var isChecked = false;
            $("#UserRemember").change(function ()
            {
                if(this.checked)
                {
                    isChecked = true;
                } else
                {
                    isChecked = false;
                }
            });
            $("#btnRegister").click(function (e)
            {
                if ($("#User_FirstName").val() == '' || $("#User_Lastname").val() == '' || $("#User_Username").val() == '' || $("#User_Password").val() == '')
                {
                    e.preventDefault();
                    myNotify('bottom', 'center', '', 'warning', 'animated fadeInLeft', 'animated fadeOutLeft', 'لطفا اطلاعات ضروری را وارد نمایید');
                }else if ($("#User_Password").val().length < 5) {
                    e.preventDefault();
                    myNotify('bottom', 'center', '', 'warning', 'animated fadeInLeft', 'animated fadeOutLeft', 'رمز عبور وارد امن نمی باشد.حداقل 6 کاراکتر وارد کنید');
                }else if ($("#User_Password").val() != $("#User_Password2").val())
                {
                    e.preventDefault();
                    myNotify('bottom', 'center', '', 'warning', 'animated fadeInLeft', 'animated fadeOutLeft', 'تکرار رمز عبور یکسان نمی باشد');
                }
            });
            $("#btnLogin").click(function (e)
            {
                e.preventDefault();
                $.ajax(
                    {
                        url: '@Url.Action("SubmitLogin","Home")',
                        type: 'post',
                        datatype: 'json',
                        data: { Username: $("#LoginUsername").val(), Password: $("#LoginPassword").val(), isPersistant: isChecked },
                        success: function (result)
                        {
                            if(result.HasValue)
                            {
                                window.location.href = '@Url.Action("Index","Home")';
                            } else
                            {
                                myNotify('bottom', 'center', '', 'warning', 'animated fadeInLeft', 'animated fadeOutLeft', result.Message);
                            }
                        },
                        error: function ()
                        {
                            myNotify('bottom', 'center', '', 'warning', 'animated fadeInLeft', 'animated fadeOutLeft', 'error');
                        }
                    });
            });
        });
        function myNotify(from, align, icon, type, animIn, animOut, myMessage) {
            $.growl({
                icon: icon,
                title: '',
                message: myMessage,
                url: ''
            }, {
                element: 'body',
                type: type,
                allow_dismiss: true,
                placement: {
                    from: from,
                    align: align
                },
                offset: {
                    x: 20,
                    y: 85
                },
                spacing: 10,
                z_index: 1031,
                delay: 2500,
                timer: 1000,
                url_target: '_blank',
                mouse_over: false,
                animate: {
                    enter: animIn,
                    exit: animOut
                },
                icon_type: 'class',
                template: '<div data-growl="container" class="alert" role="alert">' +
								'<button type="button" class="close" data-growl="dismiss">' +
									'<span aria-hidden="true">&times;</span>' +
									'<span class="sr-only">Close</span>' +
								'</button>' +
								'<span data-growl="icon"></span>' +
								'<span data-growl="title"></span>' +
								'<span data-growl="message"></span>' +
								'<a href="#" data-growl="url"></a>' +
							'</div>'
            });
        };
    </script>
    }
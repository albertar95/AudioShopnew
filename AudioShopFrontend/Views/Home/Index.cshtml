        function AddThisToFav(NidProd)
        {
            $.ajax(
                {
                    url: '@Url.Action("AddProductToFavorites","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: {NidProduct : NidProd},
                    success: function (result)
                    {
                        if(result.HasValue)
                        {
                            $("#FavCount").html(result.Html);
                        }
                    },
                    error: function () { }
                });
        }
        function AddThisToCart(NidProd) {
            $.ajax(
                {
                    url: '@Url.Action("AddProductToCart","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: { NidProduct: NidProd,Quantity : 1 },
                    success: function (result) {
                        if (result.HasValue) {
                            $("#CartCount").html(result.Html);
                        } else {
                            $("#modalAddCartAlert").modal('show')
                        }
                    },
                    error: function () { }
                });
        }
    </script>
